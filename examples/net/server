#!/usr/local/bin/sharpl

(if (not (= #ARG 3)) 
  (say "Usage: server [Host] [Port] [Password]")
  (stop))

(var HOST (ARG 0)
     PORT (parse-int:_ (ARG 1))
     PASSWORD (ARG 2))

(var clients (List)
     s (net/accept (net/listen HOST:PORT)))

(^handle-connect [c]
  (say "New client")
  (push clients c))

(^handle-request [c]
  (say "New request")
  (let [r (c)]
    (say r)))

(loop
  (let [ready (poll s clients*)]
    (else (is s ready) 
      (handle-connect (s))
      (handle-request ready))))